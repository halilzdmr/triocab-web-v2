# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=replace_with_secure_random_string

# Authentication options
# Set to 'true' to bypass email verification for local testing
BYPASS_EMAIL_VERIFICATION=true

# Stytch Authentication Configuration
STYTCH_PROJECT_ID=your_stytch_project_id
STYTCH_SECRET=your_stytch_secret_key

# Frontend URL for redirects from magic links
FRONTEND_URL=http://localhost:5173

# AWS Configuration
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS SES Configuration
SES_FROM_EMAIL=noreply@yourcompany.com

# Optional - Comma-separated list of allowed emails
# ALLOWED_EMAILS=company1@example.com,company2@example.com

# Salesforce Configuration
SF_LOGIN_URL=https://login.salesforce.com
SF_CLIENT_ID=your_connected_app_client_id
SF_USERNAME=your_salesforce_username
# SF_PRIVATE_KEY should be the private key used for JWT OAuth
# For local development, you can include it directly
# For production, use AWS Parameter Store or similar
SF_PRIVATE_KEY=your_private_key_goes_here
